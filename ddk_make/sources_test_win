TARGETNAME = testlibusb-win
TARGETPATH = output
TARGETTYPE = PROGRAM
UMTYPE = windows
UMENTRY = winmain
USE_MSVCRT = 1
386_STDCALL = 0
USER_C_FLAGS = /Gd /O2
C_DEFINES = /DVERSION_MAJOR=$(VERSION_MAJOR) /DVERSION_MINOR=$(VERSION_MINOR) \
            /DVERSION_MICRO=$(VERSION_MICRO) /DVERSION_NANO=$(VERSION_NANO) \
            /DINF_VERSION=$(VERSION_MAJOR).$(VERSION_MINOR).$(VERSION_MICRO).$(VERSION_NANO) \
            /DRC_VERSION=$(VERSION_MAJOR),$(VERSION_MINOR),$(VERSION_MICRO),$(VERSION_NANO) \
            /DRC_VERSION_STR="\"$(VERSION_MAJOR).$(VERSION_MINOR).$(VERSION_MICRO).$(VERSION_NANO)\"" \
            /Dvsnprintf=_vsnprintf

TARGETLIBS = $(SDK_LIB_PATH)\setupapi.lib \
             $(SDK_LIB_PATH)\kernel32.lib \
             $(SDK_LIB_PATH)\advapi32.lib \
             $(SDK_LIB_PATH)\user32.lib \
             libusb.lib 

SOURCES = testlibusb_win.c testlibusb_win_rc.rc 
